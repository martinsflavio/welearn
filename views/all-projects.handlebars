<div class="page-header">
	<h2>All Projects</h2>
</div>

<div class="row">
	<h3>Description</h3>
	<hr>
	{{#each this}}
			{{#if this.subject}}
				<div class="col-sm-6 col-md-4">
					<a style="text-decoration: none" href="/user/project/open/{{this.id}}">
						<div class="thumbnail">
							<img src="http://placehold.it/200x200" alt="http://placehold.it">
							<div class="caption text-center" >
								<h3>{{this.subject}}</h3>
								<p>{{this.description}}</p>
								<p>Author: {{this.User.name}}</p>
							</div>
						</div>
					</a>
				</div>
			{{/if}}
	{{/each}}
</div>